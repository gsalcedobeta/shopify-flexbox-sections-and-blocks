{% style %}
  #shopify-block-{{ block.id }} .heading {
    margin-bottom: {{ block.settings.margin_bottom }}px;
    text-align: {{ block.settings.text_align }};
  }
  @media (max-width: 750px) { /* Mobile */
    #shopify-block-{{ block.id }} .heading {
      margin-bottom: calc({{ block.settings.margin_bottom }}px / 2);
      text-align: {{ block.settings.text_align_mobile }};
    }
  }
{% endstyle %}

<{{ block.settings.tag }} class="heading">
  {{ block.settings.heading }}
</{{ block.settings.tag }}>

{% schema %}
{
  "name": "t:blocks.heading.name",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:blocks.heading.settings.heading.label",
      "default": "Lorem ipsum"
    },
    {
      "type": "select",
      "id": "tag",
      "label": "t:blocks.heading.settings.tag.label",
      "options": [
        { "label": "t:blocks.heading.settings.tag.options.h1", "value": "h1" },
        { "label": "t:blocks.heading.settings.tag.options.h2", "value": "h2" },
        { "label": "t:blocks.heading.settings.tag.options.h3", "value": "h3" },
        { "label": "t:blocks.heading.settings.tag.options.h4", "value": "h4" },
        { "label": "t:blocks.heading.settings.tag.options.h5", "value": "h5" },
        { "label": "t:blocks.heading.settings.tag.options.h6", "value": "h6" },
        { "label": "t:blocks.heading.settings.tag.options.span", "value": "span" }
      ],
      "default": "h2"
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "t:blocks.heading.settings.text_align.label",
      "options": [
        { "label": "t:blocks.heading.settings.text_align.options.left", "value": "left" },
        { "label": "t:blocks.heading.settings.text_align.options.center", "value": "center" },
        { "label": "t:blocks.heading.settings.text_align.options.right", "value": "right" }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "label": "t:blocks.heading.settings.margin_bottom.label",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "t:blocks.heading.settings.mobile.header"
    },
    {
      "type": "select",
      "id": "text_align_mobile",
      "label": "t:blocks.heading.settings.text_align.label",
      "options": [
        { "label": "t:blocks.heading.settings.text_align.options.left", "value": "left" },
        { "label": "t:blocks.heading.settings.text_align.options.center", "value": "center" },
        { "label": "t:blocks.heading.settings.text_align.options.right", "value": "right" }
      ],
      "default": "left"
    }
  ],
  "presets": [
    { "name": "t:blocks.heading.presets.name" }
  ]
}
{% endschema %}
